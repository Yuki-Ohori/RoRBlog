<h1 class="title-style">Listing Movies</h1>
<div class="add-new-movie"><%= link_to 'New article', new_article_path %></div>
<table class="style-list">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @articles['data'].each do |article| %>
    <tr>
      <td><%= article['title'] %></td>
      <td><%= article['content'] %></td>
      <td><%= link_to 'Show', article_path(article['id']) %></td>
      <td><%= link_to 'Edit', edit_article_path(article['id']) %></td>
    </tr>
  <% end %>
</table>